<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para a imagem do contato -->
    <ImageView
        android:id="@+id/contactImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_person_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:contentDescription="Contact Image" />

    <!-- Botão para selecionar uma imagem da galeria -->
    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Imagem"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Campo de texto para o nome do contato -->
    <EditText
        android:id="@+id/contactNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Contato"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <!-- Campo de texto para o email do contato -->
    <EditText
        android:id="@+id/contactEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email do Contato"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />

    <!-- Botão para adicionar o contato -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Contato" />
</LinearLayout>
